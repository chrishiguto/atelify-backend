{ 
    "compilerOptions": {
      "target": "es2016",
      "outDir": "dist",
      "module": "commonjs",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@app/*": ["src/*"],
        "@modules/*": ["src/modules/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@shared/*": ["src/shared/*"],
        "@utils/*": ["src/utils/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }
